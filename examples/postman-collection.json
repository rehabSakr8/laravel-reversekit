{
  "info": {
    "_postman_id": "sample-collection",
    "name": "Sample API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Users",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/users",
              "path": ["api", "users"]
            }
          },
          "response": [
            {
              "name": "Success",
              "status": "OK",
              "code": 200,
              "body": "{\"data\": [{\"id\": 1, \"name\": \"John Doe\", \"email\": \"john@example.com\", \"is_admin\": false, \"created_at\": \"2024-01-01T00:00:00Z\"}]}"
            }
          ]
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/api/users",
              "path": ["api", "users"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"Jane Doe\", \"email\": \"jane@example.com\", \"password\": \"secret123\", \"is_admin\": false}"
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "Get All Posts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/posts",
              "path": ["api", "posts"]
            }
          },
          "response": [
            {
              "name": "Success",
              "status": "OK",
              "code": 200,
              "body": "{\"data\": [{\"id\": 1, \"user_id\": 1, \"title\": \"Hello World\", \"body\": \"This is my first post\", \"published\": true, \"views\": 100}]}"
            }
          ]
        },
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/api/posts",
              "path": ["api", "posts"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"user_id\": 1, \"title\": \"New Post\", \"body\": \"Post content here\", \"published\": false}"
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Comments",
      "item": [
        {
          "name": "Get Comments",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/comments",
              "path": ["api", "comments"]
            }
          },
          "response": [
            {
              "name": "Success",
              "status": "OK",
              "code": 200,
              "body": "{\"data\": [{\"id\": 1, \"post_id\": 1, \"user_id\": 1, \"content\": \"Great post!\", \"approved\": true}]}"
            }
          ]
        }
      ]
    }
  ]
}

